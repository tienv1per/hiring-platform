# ==============================================
# Job Portal - Docker Environment Variables
# ==============================================
# Copy this to .env in the docker/ directory before running:
#   cp ../.env.docker .env
#   docker compose -f docker-compose.prod.yml up --build
# ==============================================

# Database (Neon PostgreSQL - cloud)
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# JWT
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRY=24h

# Redis (internal - handled by docker-compose)
REDIS_PASSWORD=

# Kafka
KAFKA_EMAIL_TOPIC=email-notifications
KAFKA_GROUP_ID=email-consumer-group

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Frontend URLs (public-facing, used at build time)
NEXT_PUBLIC_AUTH_URL=http://localhost:8001
NEXT_PUBLIC_USER_URL=http://localhost:8002
NEXT_PUBLIC_JOB_URL=http://localhost:8003
NEXT_PUBLIC_UTILITY_URL=http://localhost:8004
NEXT_PUBLIC_BLOG_URL=http://localhost:8005

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-this-to-a-secure-random-string
